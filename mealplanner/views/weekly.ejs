<section>
  <h2>Your Weekly Meal Plan</h2>

  <% if (!Array.isArray(meals) || meals.length === 0) { %>
    <p>You have not generated a meal plan yet. Go to <a href="/generate">Generate</a> to create one.</p>
  <% } else { %>
    <table class="weekly-table">
      <tr>
        <th>Day</th>
        <th>Breakfast</th>
        <th>Lunch</th>
        <th>Dinner</th>
      </tr>
      <% meals.forEach(row => { %>
        <tr>
          <td><%= row.day %></td>
          <td><%= row.breakfast %></td>
          <td><%= row.lunch %></td>
          <td><%= row.dinner %></td>
        </tr>
      <% }); %>
    </table>
  <% } %>
</section>
