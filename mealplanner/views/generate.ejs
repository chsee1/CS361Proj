
<h3>This Week's Generated Plan</h3>

<% if (meals.length === 0) { %>
  <p>No meals matched your preferences. Try relaxing some filters.</p>
<% } else { %>
  <table class="weekly-table">
    <thead>
      <tr><th>Day</th><th>Breakfast</th><th>Lunch</th><th>Dinner</th></tr>
    </thead>
    <tbody>
      <% meals.forEach(row => { %>
        <tr>
          <td><%= row.day %></td>
          <td><%= row.breakfast %></td>
          <td><%= row.lunch %></td>
          <td><%= row.dinner %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

